<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.unej.inaparadise">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.Welcome"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity"
            android:noHistory="true"/>
        <activity android:name=".ui.RegisterActivity"
            android:noHistory="true"/>
        <activity android:name=".ui.IntroActivity"
            android:noHistory="true"/>
        <activity android:name=".ui.MainActivity" />
        <activity
            android:name=".ui.Base"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.ChatActivity" />
        <activity android:name=".ui.Notification" />
        <activity android:name=".ui.FeedActivity" />
        <activity android:name=".ui.MapActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".ui.DetailMapActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".ui.CommunityActivity" />
        <activity android:name=".ui.UploadActivity"></activity>
    </application>

</manifest>