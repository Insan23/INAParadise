<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/judul_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Berhasil Membuat"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/judul_dialog2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/judul_dialog"
            android:layout_centerHorizontal="true"
            android:text="KOMUNITAS"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/judul_dialog3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/judul_dialog2"
            android:layout_centerHorizontal="true"
            android:text="Salam Budaya!"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/selesai"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_sukses"
            android:layout_below="@id/judul_dialog3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"/>


    </RelativeLayout>

</FrameLayout>